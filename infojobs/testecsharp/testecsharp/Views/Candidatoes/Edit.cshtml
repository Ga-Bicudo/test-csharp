@model CandidatoViewModel

@{
    ViewData["Title"] = "Edit";
}
<div class="alert-danger">
    @ViewBag.Error
</div>
<h1>Edit</h1>

<h4>Candidato</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.IdCandidato):
                @Html.DisplayFor(model => model.IdCandidato)
                <input asp-for="IdCandidato" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sobreome" class="control-label"></label>
                <input asp-for="Sobreome" class="form-control" />
                <span asp-validation-for="Sobreome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aniversario" class="control-label"></label>
                <input asp-for="Aniversario" class="form-control" />
                <span asp-validation-for="Aniversario" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Email" />
            <div class="form-group">
                <label asp-for="DataIngresso" class="control-label"></label>
                <input asp-for="DataIngresso" class="form-control" />
                <span asp-validation-for="DataIngresso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataUltimaAlteracao" class="control-label"></label>
                <input asp-for="DataUltimaAlteracao" class="form-control" />
                <span asp-validation-for="DataUltimaAlteracao" class="text-danger"></span>
            </div>
            <a asp-controller="ExperienciaCandidato" asp-action="Criar" asp-route-id="@Model.IdCandidato">Criar Experiencia</a>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
